{% extends '/back_office/index.html.twig' %}

{% block title %}User{% endblock %}

{% block dashBoardContent %}
    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>UserEmail</th>
                <td>{{ user.UserEmail }}</td>
            </tr>
            <tr>
                <th>IsAdmin</th>
                <td>{{ user.isAdmin ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="/profile/{{ user.id }}"><button class="btn btn-info">View profile</button></a>

    <a href="{{ path('users') }}"><button class="btn btn-primary">back to list</button></a>

    <a href="{{ path('user_edit', {'id': user.id}) }}"><button class="btn btn-warning">edit</button></a>
<br><br>

    {{ include('back_office/user/_delete_form.html.twig') }}
{% endblock %}
