    <div data-theme="default" data-layout="fluid" data-sidebar-position="left" data-sidebar-behavior="sticky">
        <div class="wrapper">
            <main class="content">
                <div class="container-fluid p-0">

                    <h1 class="h3 mb-3">List of the channels          </h1>

                    <div class="row">
                        <div class="col-12">
                            <div class="card">
                                <div class="card-header">

                                    <h6 class="card-subtitle text-muted">Display of all existing channels in the system.</h6>
                                </div>
                                <div class="card-body">


                                        <table id="datatables-reponsive" class="table table-striped" style="width:100%">
                                            <thead>
                                            <tr>
                                                <th style="text-align: center">Channel Id</th>
                                                <th style="text-align: center">Channel Name</th>
                                                <th style="text-align: center">Created In</th>
                                                <th style="text-align: center">Channel status</th>
                                                <th style="text-align: center">Channel Description</th>
                                                <th style="text-align: center">Action</th>
                                            </tr>
                                            </thead>
                                            <tbody>
                                            {% for channel in channel %}
                                            <tr >
                                                <td style="text-align: center">{{ channel.id }}</td>
                                                <td id="" style="text-align: center">{{ channel.channelName }}</td>
                                                <td style="text-align: center">{{ channel.channelCreationDate|date('d-m-Y') }}</td>
                                                <td style="text-align: center">{{ channel.channelStatus}}</td>
                                                <td style="text-align: center">{{ channel.channelDescription }}</td>
                                                <td>
                                                    <a href="{{ path('UpdateChannelAdmin',{ 'id':channel.id })}}"><button class="btn btn-info " style="border-radius:8px;width: 40px"><i class="fa fa-edit"></i></button></a>
                                                    <a href="{{ path('DeleteChannelAdmin',{ 'id':channel.id })}}"><button class="btn btn-danger " style="border-radius:8px;width: 40px"><i class="fa fa-trash"></i></button></a>
                                                </td>
                                            </tr >
                                            {% endfor %}
                                            </tbody>
                                        </table>

                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </main>
        </div>
    </div>
    <script>
        document.addEventListener("DOMContentLoaded", function() {
            // Datatables Responsive
            $("#datatables-reponsive").DataTable({
                responsive: true
            });
        });
    </script>

{% endblock %}