{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

    {% block content %}
{% if user %}
<div class="loginform">

    <figure class="image is-128x128 center" style="padding-top: 65px">
        <img style="margin-left: 200%"  src="{{ asset('/assets/donut.png')}}">
    </figure>
    <div class="FormBackground" style="margin-top:80px ">

        <h4 class="title is-3 has-text-white center" style="padding-top: 30px;width: 95%">You are already signed in as : {{ user.UserEmail }}</h4>
    </div>
</div>
{% endif %}
{% if user==null %}
    <div class="loginform">

        <figure class="image is-128x128 center" style="padding-top: 65px">
            <img style="margin-left: 200%"  src="{{ asset('/assets/donut.png')}}">
        </figure>
        <div class="FormBackground" style="margin-top:80px ">

            <h4 class="title is-3 has-text-white center" style="padding-top: 30px;width: 95%">Welcome to PodTasty</h4>
            <h5 class="title is-5 has-text-white center" style="width: 95%">Register</h5>

            <form action="{{ path('register') }}" method="post" style="width: 95%" class="center" >

                <div class="field center">
                    <p class="control has-icons-left has-icons-right">
                        <input class="input" type="text" name="_firstname" placeholder="First Name">
                        <span class="icon is-small is-right">
      <i class="fas fa-check"></i>
    </span>
                    </p>
                </div>

                <div class="field center">
                    <p class="control has-icons-left has-icons-right">
                        <input class="input" type="text" name="_lastname" placeholder="Last Name">
                        <span class="icon is-small is-right">
      <i class="fas fa-check"></i>
    </span>
                    </p>
                </div>

                <div class="field center">
                    <p class="control has-icons-left has-icons-right">
                        <input class="input" type="email" name="_email" placeholder="Email">
                        <span class="icon is-small is-left">
      <i class="fas fa-envelope"></i>
    </span>
                        <span class="icon is-small is-right">
      <i class="fas fa-check"></i>
    </span>
                    </p>
                </div>
                <div class="field center">
                    <p class="control has-icons-left">
                        <input class="input" type="password" name="_password" placeholder="Password">
                        <span class="icon is-small is-left">
      <i class="fas fa-lock"></i>
    </span>
                    </p>
                </div>


                <div class="field center">
                    <p class="control has-icons-left">
                        <input class="input" type="password" name="_confirmpassword" placeholder="Confirm Password">
                        <span class="icon is-small is-left">
      <i class="fas fa-lock"></i>
    </span>
                    </p>
                </div>

                <div class="field center">
                    <label for="start">birth date:</label>

                    <input type="date" class="form-control" id="start" name="_birth-start"
                           value="2000-07-22"
                           min="1900-01-01" max="2029-12-31">
                </div>
                <div style="width: 100%" class="field center">
                    <label class="radio">
                        <input class="form-control"  checked type="radio" name="gender" value="female">
                        Female
                    </label>
                    <label class="radio">
                        <input class="form-control"  type="radio" name="gender" value="male">
                        Male
                    </label>
                </div>
                {% if error != null %}
                    <p class="has-text-danger" >{{ error }}</p>
                {% endif %}
                {% if errors1 !=null %}
                    {% for err in errors1 %}
                        <p class="has-text-danger" >{{ err.message  }}</p>
                    {% endfor %}
                {% endif %}

                {% if errors2 !=null %}
                    {% for err in errors2 %}
                        <p class="has-text-danger">{{ err.message  }}</p>
                    {% endfor %}

                {% endif %}     <div class="field center">  </div>
                <div class="buttons is-right">
                    <button class="button is-primary has-text-white center" name="submit" type="submit"><strong>Register</strong></button>

                    <a href="{{ path('app_login') }}" class="button is-primary has-text-white center"><strong>Back to login</strong></a>
                </div><br>

            </form>
        </div>
    </div>
    </div>

{% endif %}

{% endblock %}
