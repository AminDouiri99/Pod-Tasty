{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block content %}
    {% if app.user %}
<form method="post" style="padding-top: 0;" class="loginform">
    <figure class="image is-128x128 loginform center">
        <img style="margin-left: 200%" src="{{ asset('/assets/donut.png')}}">
    </figure><br>
    <div class="FormBackground" style="margin-left: 65%;width: 70%;height: 370px;padding: 40px">

        <div class="h3 mb-3 font-weight-normal center">
            You are logged in as {{ app.user.UserEmail }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    </div>
</form>
    {% endif %}
{% if app.user==null %}
    <form method="post" style="padding-top: 0;" class="loginform">
        <figure class="image is-128x128 loginform center">
            <img style="margin-left: 200%" src="{{ asset('/assets/donut.png')}}">
        </figure><br>
        <div class="FormBackground" style="margin-left: 65%;width: 70%;height: 370px;padding: 40px">
            {% if error %}
                <div class="alert alert-danger center">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}


            <h1 class="h3 mb-3 font-weight-normal center" style="padding-top: 35px;width: 95%">Please sign in</h1>
            <div style="width: 95%" class="field center">

                <input  class="input center" type="email" placeholder="Email" value="{{ last_username }}" name="UserEmail" id="inputUserEmail"  required autofocus>
            </div>
            <div style="width: 95%" class="field center">
                <input class="input center" type="password" placeholder="Password" name="password" id="inputPassword" class="form-control" required>

            </div>

            <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}"
            >

            {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html

            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Remember me
                </label>
            </div>
            #}
            <div style="padding-top: 20px;">
                <button class="button is-primary has-text-white center"  type="submit">
                    <strong>Sign in</strong>
                </button>
                <a href="{{ path('github_connect') }}"style="background-color: #90939d;margin-top: 20px;" class="btn btn-block btn-social btn-github">
                    <i class="fa fa-github"></i> Sign in with Github
                </a>
            </div>
        </div>
    </form>

{% endif %}
{% endblock %}
